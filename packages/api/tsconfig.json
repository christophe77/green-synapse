{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"isolatedModules": true,
		"paths": {
			"@green-synapse/queryai/*": ["../queryai/src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../queryai" }]
}
