{
	"name": "green-synapse",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"license": "MIT",
	"workspaces": [
		"api/*",
		"data/*",
		"pwa/*",
		"queryAI/*",
		"shared/*",
		"static-http-server/*",
		"web",
		"web-components/*"
	],
	"scripts": {
		"build": "tsc -b",
		"build:syn": "cd web-components/syn && npm run build",
		"start:api": "npx tsx api/index.ts",
		"start:web": "npx tsx static-http-server/index.ts",
		"start:syn": "cd web-components/syn && npm run dev",
		"start:data": "npx tsx data/index.ts",
		"start": "concurrently --kill-others \"npm run start:data\" \"npm run start:api\" \"npm run start:syn\"",
		"lint": "eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.13.10",
		"@types/xml2js": "^0.4.14",
		"concurrently": "^9.1.2",
		"prettier": "^2.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0",
		"@eslint/js": "^9.21.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"eslint": "^9.21.0",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^15.15.0",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.2.0"
	},
	"dependencies": {
		"framer-motion": "^12.5.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^10.1.0",
		"@mistralai/mistralai": "^1.5.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.18.0",
		"faiss-node": "^0.5.1",
		"html-pdf-chrome": "^0.8.4",
		"http-server": "^14.1.1",
		"jsdom": "^26.0.0",
		"xml2js": "^0.6.2"
	}
}
