{
	"name": "green-synapse",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"license": "MIT",
	"workspaces": [
		"shared/*",
		"web-components/*",
		"api/*",
		"queryAI/*",
		"data/*"
	],
	"scripts": {
		"build": "tsc -b",
		"build:syn": "cd web-components/syn && npm run build",
		"start:api": "npx tsx api/index.ts",
		"start:syn": "cd web-components/syn && npm run dev",
		"start:data": "npx tsx data/index.ts",
		"start": "concurrently --kill-others \"npm run start:data\" \"npm run start:api\" \"npm run start:syn\"",
		"lint": "eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.13.10",
		"@types/xml2js": "^0.4.14",
		"concurrently": "^9.1.2",
		"eslint": "^8.0.0",
		"prettier": "^2.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@mistralai/mistralai": "^1.5.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.18.0",
		"faiss-node": "^0.5.1",
		"html-pdf-chrome": "^0.8.4",
		"jsdom": "^26.0.0",
		"xml2js": "^0.6.2"
	}
}
