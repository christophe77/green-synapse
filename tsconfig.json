{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": [
		"./api/**/*.ts",
		"./knowledge/**/*.ts",
		"./queryAI/**/*.ts",
		"./web-components/syn/**/*.ts",
		"data/lib/parse.ts"
	],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"esm": true
	}
}
